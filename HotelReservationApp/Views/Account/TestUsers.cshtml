@model IEnumerable<HotelReservationApp.Models.User>
@{
    ViewBag.Title = "Test Users";
}

<div class="container mt-5">
    <h2>Veritabanındaki Kullanıcılar</h2>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>UserID</th>
                <th>FullName</th>
                <th>Email</th>
                <th>PasswordHash</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PasswordHash</td>
                    <td>@(user.Role?.RoleName ?? "No Role")</td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="mt-3">
        <a href="/Account/Login" class="btn btn-primary">Login Sayfasına Dön</a>
    </div>
</div> 