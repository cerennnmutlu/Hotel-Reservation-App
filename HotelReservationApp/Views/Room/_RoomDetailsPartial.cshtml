@model HotelReservationApp.Models.Room

<div class="modal-header">
    <h5 class="modal-title">Room Details - @Model.RoomNumber</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            @if (Model.RoomImages != null && Model.RoomImages.Any())
            {
                <img src="@Model.RoomImages.First().ImageUrl" alt="Room Image"
                    class="img-fluid rounded mb-3" style="height: 300px; width: 100%; object-fit: cover;" />
            }
            else
            {
                <img src="~/img/room-1.jpg" alt="Room Image"
                    class="img-fluid rounded mb-3" style="height: 300px; width: 100%; object-fit: cover;" />
            }
        </div>
        <div class="col-md-6">
            <p><strong>Hotel:</strong> @Model.Hotel?.Name</p>
            <p><strong>Room Type:</strong> @Model.RoomType?.TypeName</p>
            <p><strong>Price Per Night:</strong> @Model.PricePerNight â‚º</p>
            <p><strong>Capacity:</strong> @Model.Capacity</p>
            <p><strong>Room Number:</strong> @Model.RoomNumber</p>
            <p><strong>Features:</strong></p>
            @if (Model.Hotel?.HotelAmenityMappings != null && Model.Hotel.HotelAmenityMappings.Any())
            {
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var m in Model.Hotel.HotelAmenityMappings)
                    {
                        <div class="d-flex align-items-center bg-light border rounded px-2 py-1">
                            <i class="fa @m.Amenity?.Icon me-2 text-primary"></i>
                            <span class="fw-semibold">@m.Amenity?.AmenityName</span>
                        </div>
                    }
                </div>

            }
            else
            {
                <span>No amenities listed.</span>
            }

        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <h6>Availability Calendar:</h6>
            <div class="availability-calendar">
                @{
                    var availabilityList = ViewBag.AvailabilityList as List<HotelReservationApp.Models.RoomAvailability>;
                    var startDate = DateTime.Now.Date;
                    var endDate = startDate.AddDays(30);
                }
                <div class="calendar-grid" style="display: grid; grid-template-columns: repeat(7, 1fr); gap: 5px; max-width: 400px;">
                    <!-- Calendar headers -->
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Sun</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Mon</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Tue</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Wed</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Thu</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Fri</div>
                    <div class="calendar-header" style="text-align: center; font-weight: bold; padding: 5px;">Sat</div>
                    
                    @for (var date = startDate; date <= endDate; date = date.AddDays(1))
                    {
                        var availability = availabilityList?.FirstOrDefault(a => a.Date.Date == date.Date);
                        var isAvailable = availability?.IsAvailable ?? true;
                        var bgColor = isAvailable ? "#28a745" : "#dc3545"; // Green for available, red for booked
                        var textColor = "white";
                        
                        <div class="calendar-day" 
                             style="background-color: @bgColor; color: @textColor; text-align: center; padding: 8px; border-radius: 4px; font-size: 12px; cursor: pointer;"
                             title="@date.ToString("MMM dd, yyyy") - @(isAvailable ? "Available" : "Booked")">
                            @date.Day
                        </div>
                    }
                </div>
                <div class="calendar-legend mt-3">
                    <small>
                        <span style="display: inline-block; width: 15px; height: 15px; background-color: #28a745; margin-right: 5px;"></span>Available
                        <span style="display: inline-block; width: 15px; height: 15px; background-color: #dc3545; margin-left: 15px; margin-right: 5px;"></span>Booked
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" onclick="bookRoomFromModal(@Model.RoomID)">Book Now</button>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a href="/Room/Edit/@Model.RoomID" class="btn btn-outline-primary">Edit</a>
        <a href="/Room/Delete/@Model.RoomID" class="btn btn-outline-danger">Delete</a>
    }
</div>
