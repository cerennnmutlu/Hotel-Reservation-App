@model HotelReservationApp.Models.Review
@{
    ViewData["Title"] = "Write a Review";
}

<h2>Leave a Review for @ViewBag.HotelName</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="HotelID" value="@ViewBag.HotelId" />

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating (1-5)</label>
        <input asp-for="Rating" class="form-control" min="1" max="5" type="number" required />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea asp-for="Comment" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
