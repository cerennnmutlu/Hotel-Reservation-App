@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container py-4">
    <h2 class="mb-4">Dashboard</h2>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Users</h5>
                    <p class="fs-4 fw-bold">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Hotels</h5>
                    <p class="fs-4 fw-bold">@ViewBag.HotelCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Reservations</h5>
                    <p class="fs-4 fw-bold">@ViewBag.ReservationCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Reviews</h5>
                    <p class="fs-4 fw-bold">@ViewBag.ReviewCount</p>
                </div>
            </div>
        </div>
    </div>
</div>