@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Print</button>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4" id="statsCards">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card navy shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">
                            Total Users
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalUsers">@ViewBag.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card orange shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">
                            Total Hotels
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalHotels">@ViewBag.TotalHotels</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card navy shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">
                            Total Reservations
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalReservations">@ViewBag.TotalReservations</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card orange shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">
                            Total Reviews
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalReviews">@ViewBag.TotalReviews</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-star stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header card-header-navy py-3">
                <h6 class="m-0 font-weight-bold text-white">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <button class="btn btn-navy btn-block w-100 quick-action-btn" data-action="users">
                            <i class="fas fa-users me-2"></i>Manage Users
                        </button>
                    </div>
                    <div class="col-md-3 mb-3">
                        <button class="btn btn-orange btn-block w-100 quick-action-btn" data-action="hotels">
                            <i class="fas fa-building me-2"></i>Manage Hotels
                        </button>
                    </div>
                    <div class="col-md-3 mb-3">
                        <button class="btn btn-navy btn-block w-100 quick-action-btn" data-action="reservations">
                            <i class="fas fa-calendar-check me-2"></i>View Reservations
                        </button>
                    </div>
                    <div class="col-md-3 mb-3">
                        <button class="btn btn-orange btn-block w-100 quick-action-btn" data-action="reviews">
                            <i class="fas fa-star me-2"></i>Manage Reviews
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Users</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody id="recentUsersTable">
                            <tr>
                                <td colspan="3" class="text-center">
                                    <i class="fas fa-spinner fa-spin"></i> Loading...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Reservations</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Guest</th>
                                <th>Hotel</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="recentReservationsTable">
                            <tr>
                                <td colspan="3" class="text-center">
                                    <i class="fas fa-spinner fa-spin"></i> Loading...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Sayfa yüklendiğinde dashboard verilerini yükle
            loadDashboardData();
            
            // Quick Action butonları için click event listener
            $('.quick-action-btn').click(function() {
                var action = $(this).data('action');
                handleQuickAction(action);
            });
            
            // Her 30 saniyede bir dashboard verilerini güncelle
            setInterval(function() {
                loadDashboardData();
            }, 30000);
        });
        
        // Dashboard verilerini AJAX ile yükle
        function loadDashboardData() {
            $.ajax({
                url: '@Url.Action("GetDashboardStats", "Admin")',
                type: 'GET',
                success: function(data) {
                    // İstatistikleri güncelle
                    $('#totalUsers').text(data.totalUsers);
                    $('#totalHotels').text(data.totalHotels);
                    $('#totalReservations').text(data.totalReservations);
                    $('#totalReviews').text(data.totalReviews);
                    
                    // Recent reservations tablosunu güncelle
                    updateRecentReservations(data.recentReservations);
                },
                error: function(xhr, status, error) {
                    console.error('Dashboard verileri yüklenirken hata:', error);
                    showAlert('Dashboard verileri yüklenirken bir hata oluştu.', 'danger');
                }
            });
            
            // Recent users verilerini ayrı olarak yükle
            loadRecentUsers();
        }
        
        // Recent users verilerini yükle
        function loadRecentUsers() {
            $.ajax({
                url: '@Url.Action("GetUsersData", "Admin")',
                type: 'GET',
                success: function(data) {
                    updateRecentUsers(data.slice(0, 5)); // Son 5 kullanıcıyı al
                },
                error: function(xhr, status, error) {
                    console.error('Kullanıcı verileri yüklenirken hata:', error);
                }
            });
        }
        
        // Recent users tablosunu güncelle
        function updateRecentUsers(users) {
            var tbody = $('#recentUsersTable');
            tbody.empty();
            
            if (users && users.length > 0) {
                users.forEach(function(user) {
                    var badgeClass = getBadgeClass(user.roleName);
                    var row = `
                        <tr>
                            <td>${user.fullName}</td>
                            <td>${user.email}</td>
                            <td><span class="badge ${badgeClass}">${user.roleName}</span></td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            } else {
                tbody.append('<tr><td colspan="3" class="text-center">Henüz kullanıcı bulunmuyor.</td></tr>');
            }
        }
        
        // Recent reservations tablosunu güncelle
        function updateRecentReservations(reservations) {
            var tbody = $('#recentReservationsTable');
            tbody.empty();
            
            if (reservations && reservations.length > 0) {
                reservations.forEach(function(reservation) {
                    var statusBadge = getStatusBadge(reservation.status);
                    var row = `
                        <tr>
                            <td>${reservation.user ? reservation.user.fullName : 'N/A'}</td>
                            <td>${reservation.room && reservation.room.hotel ? reservation.room.hotel.name : 'N/A'}</td>
                            <td>${statusBadge}</td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            } else {
                tbody.append('<tr><td colspan="3" class="text-center">Henüz rezervasyon bulunmuyor.</td></tr>');
            }
        }
        
        // Role'e göre badge class'ı belirle
        function getBadgeClass(roleName) {
            switch(roleName) {
                case 'Admin':
                    return 'bg-danger';
                case 'Hotel Manager':
                    return 'bg-success';
                case 'Customer':
                    return 'bg-primary';
                default:
                    return 'bg-secondary';
            }
        }
        
        // Status'e göre badge oluştur
        function getStatusBadge(status) {
            var badgeClass = '';
            switch(status) {
                case 'Confirmed':
                    badgeClass = 'bg-success';
                    break;
                case 'Pending':
                    badgeClass = 'bg-warning';
                    break;
                case 'Cancelled':
                    badgeClass = 'bg-danger';
                    break;
                default:
                    badgeClass = 'bg-secondary';
            }
            return `<span class="badge ${badgeClass}">${status}</span>`;
        }
        
        // Quick Action butonları için handler
        function handleQuickAction(action) {
            var url = '';
            switch(action) {
                case 'users':
                    url = '@Url.Action("Users", "Admin")';
                    break;
                case 'hotels':
                    url = '@Url.Action("Hotels", "Admin")';
                    break;
                case 'reservations':
                    url = '@Url.Action("Reservations", "Admin")';
                    break;
                case 'reviews':
                    url = '@Url.Action("Reviews", "Admin")';
                    break;
            }
            
            if (url) {
                // Smooth transition effect
                $('body').fadeOut(200, function() {
                    window.location.href = url;
                });
            }
        }
        
        // Alert gösterme fonksiyonu
        function showAlert(message, type) {
            var alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            // Alert'i sayfanın üstüne ekle
            if ($('.alert-container').length === 0) {
                $('body').prepend('<div class="alert-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999; width: 300px;"></div>');
            }
            
            $('.alert-container').append(alertHtml);
            
            // 5 saniye sonra otomatik kapat
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}
