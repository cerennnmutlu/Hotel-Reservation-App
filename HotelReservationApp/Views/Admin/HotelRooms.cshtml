@model IEnumerable<HotelReservationApp.Models.Room>
@{
    ViewData["Title"] = "Hotel Rooms Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewBag.HotelName - Rooms Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Hotels" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Hotels
            </a>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Hotel Rooms</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="roomsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Number</th>
                        <th>Room Type</th>
                        <th>Price per Night</th>
                        <th>Capacity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.RoomID</td>
                            <td>@room.RoomNumber</td>
                            <td>@room.RoomType?.TypeName</td>
                            <td>$@room.PricePerNight</td>
                            <td>@room.Capacity</td>
                            <td>
                                <span class="badge @(room.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(room.IsAvailable ? "Available" : "Occupied")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable) {
                $('#roomsTable').DataTable({
                    "order": [[0, "desc"]],
                    "pageLength": 25
                });
            }
        });
    </script>
}