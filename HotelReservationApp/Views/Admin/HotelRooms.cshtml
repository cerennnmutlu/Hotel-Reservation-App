@model IEnumerable<HotelReservationApp.Models.Room>
@{
    ViewData["Title"] = "Hotel Rooms Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewBag.HotelName - Rooms</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Hotels" class="btn btn-secondary">Back to Hotels</a>
            <button class="btn btn-primary" onclick="showAddRoomModal(@ViewBag.HotelID)">Add Room</button>
        </div>
    </div>
    
    <div id="alertContainer" class="mb-3" style="display:none;">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span id="alertMessage"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered" id="roomsTable">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Number</th>
                        <th>Room Type</th>
                        <th>Price per Night</th>
                        <th>Capacity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.RoomID</td>
                            <td>@room.RoomNumber</td>
                            <td>@room.RoomType?.TypeName</td>
                            <td>$@room.PricePerNight</td>
                            <td>@room.Capacity</td>
                            <td>@(room.IsAvailable ? "Available" : "Occupied")</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="viewRoomDetails(@room.RoomID)">Details</button>
                                <button class="btn btn-sm btn-warning" onclick="editRoom(@room.RoomID)">Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteRoom(@room.RoomID)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="roomModalContainer"></div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hide alert when close button is clicked
            $('.alert .btn-close').click(function() {
                $('#alertContainer').hide();
            });
        });
        
        function showAddRoomModal(hotelId) {
            // Clear any previous alerts
            $('#alertContainer').hide();
            
            console.log('Attempting to load Add Room form for hotel ID:', hotelId);
            
            $.ajax({
                url: '/Admin/AddRoomForm/' + hotelId,
                type: 'GET',
                cache: false,
                beforeSend: function() {
                    console.log('Sending request to load Add Room form...');
                },
                success: function(data) {
                    console.log('Successfully received Add Room form data');
                    $('#roomModalContainer').html(data);
                    console.log('Room modal container HTML updated');
                    $('#roomModal').modal('show');
                    console.log('Add Room Modal should be visible now');
                },
                error: function(xhr, status, error) {
                    console.error('Failed to load Add Room form:', xhr.status, xhr.statusText);
                    console.error('Error details:', error);
                    console.error('Response text:', xhr.responseText);
                    
                    var errorMessage = 'Failed to load the Add Room form. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    }
                    
                    $('#alertMessage').text(errorMessage);
                    $('#alertContainer').show();
                }
            });
        }
        
        function editRoom(id) {
            // Clear any previous alerts
            $('#alertContainer').hide();
            
            console.log('Attempting to load Edit Room form for room ID:', id);
            
            $.ajax({
                url: '/Admin/EditRoomForm/' + id,
                type: 'GET',
                cache: false,
                beforeSend: function() {
                    console.log('Sending request to load Edit Room form...');
                },
                success: function(data) {
                    console.log('Successfully received Edit Room form data');
                    $('#roomModalContainer').html(data);
                    console.log('Room modal container HTML updated');
                    $('#roomModal').modal('show');
                    console.log('Edit Room Modal should be visible now');
                },
                error: function(xhr, status, error) {
                    console.error('Failed to load Edit Room form:', xhr.status, xhr.statusText);
                    console.error('Error details:', error);
                    console.error('Response text:', xhr.responseText);
                    
                    var errorMessage = 'Failed to load the Edit Room form. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    }
                    
                    $('#alertMessage').text(errorMessage);
                    $('#alertContainer').show();
                }
            });
        }
        
        function viewRoomDetails(id) {
            // Clear any previous alerts
            $('#alertContainer').hide();
            
            console.log('Attempting to load Room Details for room ID:', id);
            
            $.ajax({
                url: '/Admin/RoomDetails/' + id,
                type: 'GET',
                cache: false,
                beforeSend: function() {
                    console.log('Sending request to load Room Details...');
                },
                success: function(data) {
                    console.log('Successfully received Room Details data');
                    $('#roomModalContainer').html(data);
                    console.log('Room modal container HTML updated');
                    $('#roomDetailsModal').modal('show');
                    console.log('Room Details Modal should be visible now');
                },
                error: function(xhr, status, error) {
                    console.error('Failed to load Room Details:', xhr.status, xhr.statusText);
                    console.error('Error details:', error);
                    console.error('Response text:', xhr.responseText);
                    
                    var errorMessage = 'Failed to load the Room Details. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    }
                    
                    $('#alertMessage').text(errorMessage);
                    $('#alertContainer').show();
                }
            });
        }
        
        function deleteRoom(id) {
            if (confirm('Are you sure you want to delete this room?')) {
                $.post('/Admin/DeleteRoom/' + id, function (response) {
                    if (response.redirectUrl) {
                        window.location.href = response.redirectUrl;
                    } else {
                        location.reload();
                    }
                }).fail(function(xhr) {
                    console.error('Failed to delete room:', xhr.status, xhr.statusText);
                    console.error('Response text:', xhr.responseText);
                    
                    var errorMessage = 'An error occurred while deleting the room.';
                    
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    }
                    
                    $('#alertMessage').text(errorMessage);
                    $('#alertContainer').show();
                });
            }
        }
    </script>
}