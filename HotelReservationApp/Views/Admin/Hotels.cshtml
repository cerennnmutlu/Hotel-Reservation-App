@model List<HotelReservationApp.Models.Hotel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Hotels";
}
<div class="container py-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Hotels</h2>
        <button class="btn btn-primary" onclick="showHotelModal()">Add Hotel</button>
    </div>
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>City</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.HotelID</td>
                <td>@hotel.Name</td>
                <td>@(hotel.City != null ? hotel.City.CityName : "Not specified")</td>
                <td>@hotel.Phone</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="viewHotel(@hotel.HotelID)">Details</button>
                    <a href="/Admin/HotelRooms/@hotel.HotelID" class="btn btn-sm btn-primary">Rooms</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteHotel(@hotel.HotelID)">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div id="hotelModalContainer"></div>
</div>
<script>
    function showHotelModal() {
        $.get('/Admin/AddHotelForm', function (data) {
            $('#hotelModalContainer').html(data);
        });
    }
    
    function editHotel(id) {
        $.get('/Admin/EditHotelForm/' + id, function (data) {
            $('#hotelModalContainer').html(data);
        });
    }
    
    function deleteHotel(id) {
        if (confirm('Are you sure to delete this hotel?')) {
            $.post('/Admin/DeleteHotel/' + id, function () {
                location.reload();
            });
        }
    }
    
    function viewHotel(id) {
        $.get('/Admin/ViewHotelDetails/' + id, function (data) {
            $('#hotelModalContainer').html(data);
        });
    }
</script>