@model HotelReservationApp.Models.HomeViewModel
@{
ViewData["Title"] = "Home";
}

<div class="container-fluid p-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="container-xxl bg-white p-0">

        <!-- Carousel Start -->
        <div class="container-fluid p-0 mb-5">
            <div id="header-carousel" class="carousel slide"
                data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                        <div
                            class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h6
                                    class="section-title text-white text-uppercase mb-3 animated slideInDown">Luxury
                                    Living
                                </h6>
                                <h1
                                    class="display-3 text-white mb-4 animated slideInDown">Discover
                                    a Luxury Hotel
                                </h1>
                                <a href="/Room/Index"
                                    class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Our
                                    Rooms</a>
                                <a href="/Home/Booking"
                                    class="btn btn-light py-md-3 px-md-5 animated slideInRight">Search
                                    Rooms</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="w-100" src="~/img/carousel-2.jpg" alt="Image">
                        <div
                            class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h6
                                    class="section-title text-white text-uppercase mb-3 animated slideInDown">Comfortable
                                    Accommodation
                                </h6>
                                <h1
                                    class="display-3 text-white mb-4 animated slideInDown">Perfect
                                    Holiday Experience
                                </h1>
                                <a href="/Room/Index"
                                    class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Our
                                    Rooms</a>
                                <a href="/Home/Booking"
                                    class="btn btn-light py-md-3 px-md-5 animated slideInRight">Search
                                    Rooms</a>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button"
                    data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"
                        aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button"
                    data-bs-target="#header-carousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon"
                        aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!-- Carousel End -->

        <!-- Booking Start -->
        <div class="container-fluid booking pb-5 wow fadeIn"
            data-wow-delay="0.1s">
            <div class="container">
                <div class="bg-white shadow" style="padding: 35px;">
                    <form action="/Home/Booking"
                        method="post">
                        <div class="row g-2">
                            <div class="col-md-10">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <div class="date" id="date1"
                                            data-target-input="nearest">
                                            <input type="date"
                                                class="form-control"
                                                name="CheckInDate"
                                                value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                                                min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                                                required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="date" id="date2"
                                            data-target-input="nearest">
                                            <input type="date"
                                                class="form-control"
                                                name="CheckOutDate"
                                                value="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")"
                                                min="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")"
                                                required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-select"
                                            name="AdultCount">
                                            <option value="1" selected>Adult
                                                1</option>
                                            <option value="2">Adult 2</option>
                                            <option value="3">Adult 3</option>
                                            <option value="4">Adult 4</option>
                                            <option value="5">Adult 5</option>
                                            <option value="6">Adult 6</option>
                                            <option value="7">Adult 7</option>
                                            <option value="8">Adult 8</option>
                                            <option value="9">Adult 9</option>
                                            <option value="10">Adult 10</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-select"
                                            name="ChildCount">
                                            <option value="0" selected>Child
                                                0</option>
                                            <option value="1">Child 1</option>
                                            <option value="2">Child 2</option>
                                            <option value="3">Child 3</option>
                                            <option value="4">Child 4</option>
                                            <option value="5">Child 5</option>
                                            <option value="6">Child 6</option>
                                            <option value="7">Child 7</option>
                                            <option value="8">Child 8</option>
                                            <option value="9">Child 9</option>
                                            <option value="10">Child 10</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit"
                                    class="btn btn-primary w-100">Search
                                    Rooms</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Booking End -->

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const checkInInput = document.querySelector('input[name="CheckInDate"]');
                const checkOutInput = document.querySelector('input[name="CheckOutDate"]');

                checkInInput.addEventListener('change', function() {
                    const checkInDate = new Date(this.value);
                    const minCheckOutDate = new Date(checkInDate);
                    minCheckOutDate.setDate(minCheckOutDate.getDate() + 1);
                    
                    checkOutInput.min = minCheckOutDate.toISOString().split('T')[0];
                    
                    if (checkOutInput.value && new Date(checkOutInput.value) <= checkInDate) {
                        checkOutInput.value = minCheckOutDate.toISOString().split('T')[0];
                    }
                });
            });
        </script>

        <!-- About Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6">
                        <h6
                            class="section-title text-start text-primary text-uppercase">About
                            Us</h6>
                        <h1 class="mb-4">Welcome to <span
                                class="text-primary text-uppercase">Hotelier</span></h1>
                        <p class="mb-4">Experience an unforgettable stay at our
                            hotel where luxury and comfort come together.
                            We offer you the best holiday experience with our
                            professional team and quality services.
                        </p>
                        <div class="row g-3 pb-4">
                            <div class="col-sm-4 wow fadeIn"
                                data-wow-delay="0.1s">
                                <div class="border rounded p-1">
                                    <div class="border rounded text-center p-4">
                                        <i
                                            class="fa fa-hotel fa-2x text-primary mb-2"></i>
                                        <h2 class="mb-1"
                                            data-toggle="counter-up">@Model.TotalRooms</h2>
                                        <p class="mb-0">Rooms</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4 wow fadeIn"
                                data-wow-delay="0.3s">
                                <div class="border rounded p-1">
                                    <div class="border rounded text-center p-4">
                                        <i
                                            class="fa fa-users-cog fa-2x text-primary mb-2"></i>
                                        <h2 class="mb-1"
                                            data-toggle="counter-up">@Model.TotalHotels</h2>
                                        <p class="mb-0">Hotels</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4 wow fadeIn"
                                data-wow-delay="0.5s">
                                <div class="border rounded p-1">
                                    <div class="border rounded text-center p-4">
                                        <i
                                            class="fa fa-users fa-2x text-primary mb-2"></i>
                                        <h2 class="mb-1"
                                            data-toggle="counter-up">@Model.TotalCustomers</h2>
                                        <p class="mb-0">Customers</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="btn btn-primary py-3 px-5 mt-2"
                            href="/Home/About">Learn
                            More</a>
                    </div>
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-75 wow zoomIn"
                                    data-wow-delay="0.1s"
                                    src="~/img/about-1.jpg"
                                    style="margin-top: 25%;">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-100 wow zoomIn"
                                    data-wow-delay="0.3s"
                                    src="~/img/about-2.jpg">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-50 wow zoomIn"
                                    data-wow-delay="0.5s"
                                    src="~/img/about-3.jpg">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-75 wow zoomIn"
                                    data-wow-delay="0.7s"
                                    src="~/img/about-4.jpg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->

        <!-- Room Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6
                        class="section-title text-center text-primary text-uppercase">Our
                        Rooms</h6>
                    <h1 class="mb-5">Discover Our <span
                            class="text-primary text-uppercase">Featured
                            Rooms</span></h1>
                </div>
                <div class="row g-4">
                    @if (Model.FeaturedRooms.Any())
                    {
                    @foreach (var room in Model.FeaturedRooms)
                    {
                    <div class="col-lg-4 col-md-6 wow fadeInUp"
                        data-wow-delay="0.1s">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative">
                                @if (room.RoomImages != null && room.RoomImages.Any())
                                {
                                    <img class="img-fluid" src="@room.RoomImages.First().ImageUrl"
                                        alt="@room.RoomType?.TypeName" style="height: 250px; width: 100%; object-fit: cover;"
                                        onerror="this.src='~/img/room-1.jpg'">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/img/room-1.jpg"
                                        alt="@room.RoomType?.TypeName" style="height: 250px; width: 100%; object-fit: cover;">
                                }
                                <small
                                    class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">
                                    $@room.PricePerNight/Night
                                </small>
                            </div>
                            <div class="p-4 mt-2">
                                <div
                                    class="d-flex justify-content-between mb-3">
                                    <h5
                                        class="mb-0">@room.RoomType?.TypeName</h5>
                                    <div class="ps-2">
                                        @{
                                            var avgRating = room.Hotel?.Reviews?.Any() == true ? 
                                                Math.Round(room.Hotel.Reviews.Average(r => r.Rating)) : 0;
                                            for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= avgRating)
                                                {
                                                    <small class="fa fa-star text-primary"></small>
                                                }
                                                else
                                                {
                                                    <small class="fa fa-star text-secondary"></small>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <small class="border-end me-3 pe-3">
                                        <i class="fa fa-hotel text-primary me-2"></i>@room.Hotel?.Name
                                    </small>
                                    <small class="border-end me-3 pe-3">
                                        <i class="fa fa-bed text-primary me-2"></i>@room.Capacity Persons
                                    </small>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <button
                                        class="btn btn-sm btn-primary rounded py-2 px-4"
                                        onclick="showRoomDetails(@room.RoomID)">Details</button>
                                    <button
                                        class="btn btn-sm btn-dark rounded py-2 px-4"
                                        onclick="bookRoom(@room.RoomID)">Book
                                        Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    }
                    else
                    {
                    <div class="col-12 text-center">
                        <p>No rooms available yet.</p>
                    </div>
                    }
                </div>
            </div>
        </div>
        <!-- Room End -->

        <!-- Service Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6
                        class="section-title text-center text-primary text-uppercase">Our
                        Services</h6>
                    <h1 class="mb-5">Services We <span
                            class="text-primary text-uppercase">Offer</span></h1>
                </div>
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-hotel fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Room & Apartment</h5>
                            <p class="text-body mb-0">Experience an unforgettable stay in our comfortable and luxurious rooms.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-utensils fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Food & Restaurant</h5>
                            <p class="text-body mb-0">Delight your taste buds with delicious food and professional restaurant service.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-spa fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Spa & Fitness</h5>
                            <p class="text-body mb-0">Rejuvenate yourself with relaxing spa services and our modern fitness center.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.4s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-swimmer fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Sports & Games</h5>
                            <p class="text-body mb-0">Have an active holiday with sports activities and fun game areas.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-glass-cheers fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Events & Parties</h5>
                            <p class="text-body mb-0">Professional organization service for special events and unforgettable parties.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.6s">
                        <div class="service-item rounded" style="transition: all 0.3s ease; cursor: default;">
                            <div class="service-icon bg-transparent border rounded p-1">
                                <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                                    <i class="fa fa-dumbbell fa-2x text-primary"></i>
                                </div>
                            </div>
                            <h5 class="mb-3">Gym & Yoga</h5>
                            <p class="text-body mb-0">Maintain your healthy lifestyle with our modern gym and yoga studio.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Service End -->

    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
            class="bi bi-arrow-up"></i></a>

</div>

<style>
    .service-item:hover {
        transform: translateY(-5px);
        background-color: #faa935;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        color: #fff;
    }
    .service-item:hover h5,
    .service-item:hover p,
    .service-item:hover i {
        color: #fff;
    }
</style>

<!-- Room Details Modal -->
<div class="modal fade" id="roomDetailsModal" tabindex="-1" aria-labelledby="roomDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="roomDetailsContent">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRoomDetails(roomId) {
            $.get('/Room/Details/' + roomId, function(data) {
                $('#roomDetailsContent').html(data);
                $('#roomDetailsModal').modal('show');
            });
        }

        function bookRoom(roomId) {
            // Check if user is logged in
            @if (User.Identity.IsAuthenticated)
            {
                <text>
                window.location.href = '/Reservation/Create?roomId=' + roomId;
                </text>
            }
            else
            {
                <text>
                // Redirect to login with return URL
                window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent('/Reservation/Create?roomId=' + roomId);
                </text>
            }
        }

        function bookRoomFromModal(roomId) {
            $('#roomDetailsModal').modal('hide');
            bookRoom(roomId);
        }
    </script>
}