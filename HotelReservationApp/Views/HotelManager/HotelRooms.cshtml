@model IEnumerable<HotelReservationApp.Models.Room>
@{
    ViewData["Title"] = "Hotel Rooms";
    Layout = "~/Views/Shared/_HotelManagerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div>
        <h1 class="h2">@ViewBag.HotelName - Rooms</h1>
        <p class="text-muted">Manage your hotel rooms</p>
    </div>
    <div>
        <a href="/HotelManager/MyHotels" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i> Back to Hotels
        </a>
        <button class="btn btn-primary" id="addNewRoomBtn">
            <i class="fas fa-plus-circle me-1"></i> Add New Room
        </button>
    </div>
</div>

<div class="row mb-4">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Room No</th>
                        <th>Room Type</th>
                        <th>Capacity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr data-room-id="@room.RoomID">
                            <td><strong>@room.RoomNumber</strong></td>
                            <td>@room.RoomType?.TypeName</td>
                            <td>@room.Capacity person(s)</td>
                            <td>@room.PricePerNight.ToString("C")</td>
                            <td>
                                @if (room.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Occupied</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary edit-room-btn" data-room-id="@room.RoomID">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info view-room-details-btn" data-room-id="@room.RoomID">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger delete-room-btn" data-room-id="@room.RoomID">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="col-12 text-center py-5">
            <div class="py-5">
                <i class="fas fa-bed fa-4x mb-3 text-muted"></i>
                <h3>No Rooms Found</h3>
                <p class="text-muted">No rooms have been added to this hotel yet. Use the button above to add your first room.</p>
            </div>
        </div>
    }
</div>

<!-- Add/Edit Room Modal -->
<div class="modal fade" id="roomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roomModalTitle">Add New Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="roomForm">
                    <input type="hidden" id="roomId" value="0">
                    <input type="hidden" id="hotelId" value="@ViewBag.HotelID">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="roomNumber" class="form-label">Room Number <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="roomNumber" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="roomTypeId" class="form-label">Room Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="roomTypeId" required></select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="capacity" class="form-label">Capacity <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="capacity" min="1" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="price" class="form-label">Price Per Night <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="price" min="0" step="0.01" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="isAvailable" class="form-label">Status</label>
                            <select class="form-select" id="isAvailable">
                                <option value="true">Available</option>
                                <option value="false">Occupied</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="roomImages" class="form-label">Room Images</label>
                            <input type="file" class="form-control" id="roomImages" name="roomImages" multiple accept="image/*">
                            <small class="text-muted">You can select multiple images (max 5)</small>
                            <div class="form-check mt-2 d-none" id="deleteImagesContainer">
                                <input class="form-check-input" type="checkbox" id="deleteExistingImages">
                                <label class="form-check-label" for="deleteExistingImages">
                                    Replace existing images
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveRoomBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteRoomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this room? This action cannot be undone.</p>
                <p><strong>Room: </strong><span id="deleteRoomNumber"></span></p>
                <input type="hidden" id="deleteRoomId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteRoomBtn">Delete Room</button>
            </div>
        </div>
    </div>
</div>

<!-- Room Details Modal -->
<div class="modal fade" id="roomDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Room Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="roomDetailsContent">
                <!-- Room details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Utility functions
        function showNotification(message, type) {
            // Simple alert for now, can be replaced with a toast library
            alert(type.toUpperCase() + ': ' + message);
        }
        
        function resetRoomForm() {
            $('#roomForm')[0].reset();
            $('#roomId').val('0');
            $('#hotelId').val('@ViewBag.HotelID');
            $('#roomModalTitle').text('Add New Room');
            $('#saveRoomBtn').text('Save');
        }
        
        // Load room types from API
        function loadRoomTypes() {
            $.ajax({
                url: '/Admin/GetRoomTypes',
                type: 'GET',
                success: function(roomTypes) {
                    $('#roomTypeId').empty().append('<option value="">Select room type</option>');
                    if (roomTypes && roomTypes.length > 0) {
                        roomTypes.forEach(type => {
                            $('#roomTypeId').append(`<option value="${type.roomTypeID}">${type.name}</option>`);
                        });
                    } else {
                        showNotification('Room types not found', 'warning');
                    }
                },
                error: function(xhr) {
                    console.error('Error loading room types:', xhr);
                    showNotification('Failed to load room types', 'error');
                }
            });
        }
        
        // Get room details by ID
        function getRoomDetails(roomId) {
            $.ajax({
                url: `/HotelManager/GetRoomDetails/${roomId}`,
                type: 'GET',
                success: function(room) {
                    if (room) {
                        $('#roomId').val(room.roomID);
                        $('#hotelId').val(room.hotelID);
                        $('#roomNumber').val(room.roomNumber);
                        $('#roomTypeId').val(room.roomTypeID);
                        $('#capacity').val(room.capacity);
                        $('#price').val(room.pricePerNight);
                        $('#description').val('');
                        $('#isAvailable').val(room.isAvailable.toString());
                        
                        // Show the delete images option if this room has images
                        if (room.roomImages && room.roomImages.length > 0) {
                            $('#deleteImagesContainer').removeClass('d-none');
                        } else {
                            $('#deleteImagesContainer').addClass('d-none');
                        }
                        
                        $('#roomModalTitle').text('Edit Room');
                        $('#saveRoomBtn').text('Update');
                        $('#roomModal').modal('show');
                    } else {
                        showNotification('Room not found', 'error');
                    }
                },
                error: function(xhr) {
                    console.error('Error getting room details:', xhr);
                    showNotification('Failed to get room details', 'error');
                }
            });
        }
        
        // View room details
        function viewRoomDetails(roomId) {
            $.ajax({
                url: `/HotelManager/GetRoomDetailsView/${roomId}`,
                type: 'GET',
                success: function(html) {
                    $('#roomDetailsContent').html(html);
                    $('#roomDetailsModal').modal('show');
                },
                error: function(xhr) {
                    console.error('Error loading room details view:', xhr);
                    showNotification('Failed to load room details', 'error');
                }
            });
        }
        
        // Save room (create or update)
        function saveRoom() {
            const roomId = parseInt($('#roomId').val());
            const hotelId = parseInt($('#hotelId').val());
            const roomNumber = $('#roomNumber').val()?.trim();
            const roomTypeId = parseInt($('#roomTypeId').val());
            const capacity = parseInt($('#capacity').val());
            const price = parseFloat($('#price').val());
            const isAvailable = $('#isAvailable').val() === 'true';
            const roomImages = $('#roomImages')[0].files;
            
            // Validation
            if (!roomNumber || !roomTypeId || roomTypeId <= 0 || !capacity || capacity <= 0 || !price || price < 0) {
                showNotification('Please fill in all required fields', 'error');
                return;
            }
            
            const isNewRoom = roomId === 0;
            const url = isNewRoom ? '/HotelManager/CreateRoom' : '/HotelManager/UpdateRoom';
            const actionText = isNewRoom ? 'Adding...' : 'Updating...';
            
            $('#saveRoomBtn').prop('disabled', true).text(actionText);
            
            // Create room data object
            const roomData = {
                RoomID: roomId,
                HotelID: hotelId,
                RoomNumber: roomNumber,
                RoomTypeID: roomTypeId,
                Capacity: capacity,
                PricePerNight: price,
                IsAvailable: isAvailable
            };
            
            // Create FormData object for file uploads
            const formData = new FormData();
            formData.append('roomData', JSON.stringify(roomData));
            
            // Add room images to FormData
            if (roomImages && roomImages.length > 0) {
                for (let i = 0; i < roomImages.length; i++) {
                    formData.append('roomImages', roomImages[i]);
                }
            }
            
            // Add flag to delete existing images if needed
            if (!isNewRoom && $('#deleteExistingImages').is(':checked')) {
                formData.append('deleteExistingImages', 'true');
            }
            
            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                processData: false,  // tell jQuery not to process the data
                contentType: false,  // tell jQuery not to set contentType
                success: function(response) {
                    $('#saveRoomBtn').prop('disabled', false).text('Save');
                    
                    if (response.success) {
                        showNotification(response.message, 'success');
                        $('#roomModal').modal('hide');
                        location.reload();
                    } else {
                        showNotification(response.message, 'error');
                    }
                },
                error: function(xhr) {
                    $('#saveRoomBtn').prop('disabled', false).text('Save');
                    showNotification('An error occurred', 'error');
                    console.error(xhr);
                }
            });
        }
        
        // Delete room
        function deleteRoom(roomId) {
            $.ajax({
                url: `/HotelManager/DeleteRoom/${roomId}`,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        location.reload();
                    } else {
                        showNotification(response.message, 'error');
                    }
                },
                error: function(xhr) {
                    showNotification('An error occurred', 'error');
                    console.error(xhr);
                }
            });
        }
        
        // Event handlers
        $(document).ready(function() {
            // Load room types when page loads
            loadRoomTypes();
            
            // Add new room button click
            $('#addNewRoomBtn').on('click', function() {
                resetRoomForm();
                $('#roomModal').modal('show');
            });
            
            // Edit room button click
            $(document).on('click', '.edit-room-btn', function() {
                const roomId = $(this).data('room-id');
                getRoomDetails(roomId);
            });
            
            // View room details button click
            $(document).on('click', '.view-room-details-btn', function() {
                const roomId = $(this).data('room-id');
                viewRoomDetails(roomId);
            });
            
            // Delete room button click
            $(document).on('click', '.delete-room-btn', function() {
                const roomId = $(this).data('room-id');
                const roomNumber = $(this).closest('tr').find('td:first strong').text();
                
                $('#deleteRoomId').val(roomId);
                $('#deleteRoomNumber').text(roomNumber);
                $('#deleteRoomModal').modal('show');
            });
            
            // Confirm delete button click
            $('#confirmDeleteRoomBtn').on('click', function() {
                const roomId = $('#deleteRoomId').val();
                deleteRoom(roomId);
                $('#deleteRoomModal').modal('hide');
            });
            
            // Save room button click
            $('#saveRoomBtn').on('click', saveRoom);
        });
    </script>
}