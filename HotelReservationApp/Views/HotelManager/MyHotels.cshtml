@model IEnumerable<HotelReservationApp.Models.Hotel>
@{
    ViewBag.Title = "My Hotels";
    Layout = "~/Views/Shared/_HotelManagerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">My Hotels</h1>
    <button class="btn btn-primary" id="addNewHotelBtn">
        <i class="fas fa-plus-circle me-1"></i> Add New Hotel
    </button>
</div>

<div class="row mb-4">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Hotel Name</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Contact</th>
                        <th>Rooms</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hotel in Model)
                    {
                        <tr data-hotel-id="@hotel.HotelID">
                            <td><strong>@hotel.Name</strong></td>
                            <td>@hotel.City?.CityName</td>
                            <td>@(hotel.Address ?? "Not specified")</td>
                            <td>
                                <small>
                                    <i class="fas fa-phone me-1"></i> @(hotel.Phone ?? "Not specified")<br>
                                    <i class="fas fa-envelope me-1"></i> @(hotel.Email ?? "Not specified")
                                </small>
                            </td>
                            <td><span class="badge bg-info">@(hotel.Rooms?.Count ?? 0) rooms</span></td>
                            <td>
                                @if (hotel.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm edit-hotel-btn" data-hotel-id="@hotel.HotelID">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-outline-info btn-sm view-rooms-btn" data-hotel-id="@hotel.HotelID">
                                        <i class="fas fa-bed"></i>
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm delete-hotel-btn" data-hotel-id="@hotel.HotelID">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="col-12 text-center py-5">
            <div class="py-5">
                <i class="fas fa-hotel fa-4x mb-3 text-muted"></i>
                <h3>No Hotels Found</h3>
                <p class="text-muted">You haven't added any hotels yet. Click the button above to add your first hotel.</p>
            </div>
        </div>
    }
</div>

<!-- Hotel Modal -->
<div class="modal fade" id="hotelModal" tabindex="-1" aria-labelledby="hotelModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hotelModalTitle">Add New Hotel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="hotelForm">
                    <input type="hidden" id="hotelId" value="0" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="hotelName" class="form-label">Hotel Name</label>
                                <input type="text" class="form-control" id="hotelName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="cityId" class="form-label">City</label>
                                <select class="form-select" id="cityId" required>
                                    <option value="">Select a city</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <textarea class="form-control" id="address" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="phone">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="website" class="form-label">Website</label>
                                <input type="url" class="form-control" id="website">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="isActive" class="form-label">Status</label>
                                <select class="form-select" id="isActive">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveHotelBtn">Save Hotel</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Hotel Modal -->
<div class="modal fade" id="deleteHotelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the hotel <strong id="deleteHotelName"></strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
                <input type="hidden" id="deleteHotelId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Hotel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Utility functions
        function showNotification(message, type) {
            // Simple alert for now, can be replaced with a toast library
            alert(type.toUpperCase() + ': ' + message);
        }

        function resetForm() {
            $('#hotelForm')[0].reset();
            $('#hotelId').val('0');
            $('#hotelModalTitle').text('Add New Hotel');
            $('#saveHotelBtn').text('Save Hotel');
        }

        // Load cities from API
        function loadCities() {
            $.ajax({
                url: '/Admin/GetCities',
                type: 'GET',
                success: function (cities) {
                    $('#cityId').empty().append('<option value="">Select a city</option>');
                    if (cities && cities.length > 0) {
                        cities.forEach(city => {
                            $('#cityId').append(`<option value="${city.cityID}">${city.cityName}</option>`);
                        });
                    } else {
                        showNotification('No cities found', 'warning');
                    }
                },
                error: function (xhr) {
                    console.error('Error loading cities:', xhr);
                    showNotification('Failed to load cities', 'error');
                }
            });
        }

        // Get hotel details by ID
        function getHotelDetails(hotelId) {
            $.ajax({
                url: `/HotelManager/GetHotelDetails/${hotelId}`,
                type: 'GET',
                success: function (hotel) {
                    if (hotel) {
                        $('#hotelId').val(hotel.hotelID);
                        $('#hotelName').val(hotel.name);
                        $('#cityId').val(hotel.cityID);
                        $('#address').val(hotel.address);
                        $('#phone').val(hotel.phone);
                        $('#email').val(hotel.email);
                        $('#description').val(hotel.description);
                        $('#website').val(hotel.website);
                        $('#isActive').val(hotel.isActive.toString());

                        $('#hotelModalTitle').text('Edit Hotel');
                        $('#saveHotelBtn').text('Update Hotel');
                        $('#hotelModal').modal('show');
                    } else {
                        showNotification('Hotel not found', 'error');
                    }
                },
                error: function (xhr) {
                    console.error('Error getting hotel details:', xhr);
                    showNotification('Failed to get hotel details', 'error');
                }
            });
        }

        // Save hotel (create or update)
        function saveHotel() {
            const hotelId = parseInt($('#hotelId').val());
            const hotelName = $('#hotelName').val()?.trim();
            const cityId = parseInt($('#cityId').val());
            const address = $('#address').val()?.trim();
            const phone = $('#phone').val()?.trim();
            const email = $('#email').val()?.trim();
            const description = $('#description').val()?.trim();
            const website = $('#website').val()?.trim();
            const isActive = $('#isActive').val() === 'true';

            // Validation
            if (!hotelName || !cityId || cityId <= 0) {
                showNotification('Please enter all required fields', 'error');
                return;
            }

            const hotelData = {
                HotelID: hotelId,
                Name: hotelName,
                CityID: cityId,
                Address: address || '',
                Phone: phone || '',
                Email: email || '',
                Description: description || '',
                Website: website || '',
                IsActive: isActive
            };

            const isNewHotel = hotelId === 0;
            const url = isNewHotel ? '/HotelManager/CreateHotel' : '/HotelManager/UpdateHotel';
            const actionText = isNewHotel ? 'Adding...' : 'Updating...';

            $('#saveHotelBtn').prop('disabled', true).text(actionText);

            $.ajax({
                url: url,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(hotelData),
                success: function (response) {
                    $('#saveHotelBtn').prop('disabled', false).text('Save Hotel');

                    if (response.success) {
                        showNotification(response.message, 'success');
                        $('#hotelModal').modal('hide');
                        location.reload();
                    } else {
                        showNotification(response.message, 'error');
                    }
                },
                error: function (xhr) {
                    $('#saveHotelBtn').prop('disabled', false).text('Save Hotel');
                    showNotification('An error occurred', 'error');
                    console.error(xhr);
                }
            });
        }

        // Delete hotel
        function deleteHotel(hotelId) {
            $.ajax({
                url: `/HotelManager/DeleteHotel/${hotelId}`,
                type: 'POST',
                success: function (response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        location.reload();
                    } else {
                        showNotification(response.message, 'error');
                    }
                },
                error: function (xhr) {
                    showNotification('An error occurred', 'error');
                    console.error(xhr);
                }
            });
        }

        // Event handlers
        $(document).ready(function () {
            // Load cities when page loads
            loadCities();

            // Add new hotel button click
            $('#addNewHotelBtn').on('click', function () {
                resetForm();
                $('#hotelModal').modal('show');
            });

            // Edit hotel button click
            $(document).on('click', '.edit-hotel-btn', function () {
                const hotelId = $(this).data('hotel-id');
                getHotelDetails(hotelId);
            });

            // View rooms button click
            $(document).on('click', '.view-rooms-btn', function () {
                const hotelId = $(this).data('hotel-id');
                window.location.href = `/HotelManager/HotelRooms/${hotelId}`;
            });

            // Delete hotel button click
            $(document).on('click', '.delete-hotel-btn', function () {
                const hotelId = $(this).data('hotel-id');
                const hotelName = $(this).closest('tr').find('td:first strong').text();

                $('#deleteHotelId').val(hotelId);
                $('#deleteHotelName').text(hotelName);
                $('#deleteHotelModal').modal('show');
            });

            // Confirm delete button click
            $('#confirmDeleteBtn').on('click', function () {
                const hotelId = $('#deleteHotelId').val();
                deleteHotel(hotelId);
                $('#deleteHotelModal').modal('hide');
            });

            // Save hotel button click
            $('#saveHotelBtn').on('click', saveHotel);
        });
    </script>
}